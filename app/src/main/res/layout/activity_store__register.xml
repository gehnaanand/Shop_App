<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/animation_list_2"
    android:id="@+id/scrollView">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.gehna.shopapp.Store_Register">


    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Register Store"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pacifico"
        android:textSize="40dp"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/store_name"
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textview"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:textColorHint="#fff"
        android:inputType="textPersonName"
        android:hint="Store Name"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/store_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Email"
        android:layout_alignLeft="@+id/store_name"
        android:layout_alignRight="@+id/store_name"
        android:textColorHint="#fff"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Phone"
        android:layout_alignLeft="@+id/store_name"
        android:layout_alignRight="@+id/store_name"
        android:textColorHint="#fff"
        android:inputType="phone" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latitude"
        android:ems="10"
        android:hint="Password"
        android:layout_alignLeft="@+id/store_name"
        android:layout_alignRight="@+id/store_name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColorHint="#fff"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirm_pass"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textColorHint="#fff"
        android:text="register" />

    <EditText
        android:id="@+id/confirm_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:layout_below="@+id/password"
        android:layout_marginTop="20dp"
        android:hint="Confirm Password"
        android:layout_alignLeft="@+id/store_name"
        android:layout_alignRight="@+id/store_name"
        android:layout_centerHorizontal="true"
        android:textColorHint="#fff"
        android:inputType="textPassword" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/store_name"
        android:layout_alignRight="@+id/store_name"
        android:ems="10"
        android:hint="Longitude"
        android:textColorHint="#fff"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/latitude"
        android:hint="Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longitude"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/store_name"
        android:layout_alignRight="@+id/store_name"
        android:ems="10"
        android:textColorHint="#fff"
        android:inputType="numberDecimal" />

</RelativeLayout>
</ScrollView>