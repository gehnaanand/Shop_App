<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_list_2"
    android:id="@+id/relativeLayout"
    tools:context="com.example.gehna.shopapp.Store_Details">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Add your Clothing"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pacifico"
        android:textSize="40dp"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/brand"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:textColorHint="#fff"
        android:inputType="textPersonName"
        android:hint="Brand" />

    <EditText
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/brand"
        android:layout_alignLeft="@+id/brand"
        android:layout_below="@+id/brand"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:textColorHint="#fff"
        android:inputType="textPersonName"
        android:hint="Color" />

    <EditText
        android:id="@+id/style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color"
        android:layout_alignLeft="@+id/brand"
        android:layout_alignRight="@+id/color"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:textColorHint="#fff"
        android:inputType="textPersonName"
        android:hint="Style"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_height="wrap_content"
        android:text="add"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_below="@+id/style"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
